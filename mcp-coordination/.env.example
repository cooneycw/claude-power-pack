# MCP Coordination Server Configuration

# Redis connection
REDIS_URL=redis://localhost:6379/0

# Server settings
SERVER_PORT=8082
LOG_LEVEL=INFO

# Lock defaults (seconds)
DEFAULT_LOCK_TIMEOUT=300  # 5 minutes

# Heartbeat TTL (seconds)
HEARTBEAT_TTL=300  # 5 minutes

# Session status thresholds (seconds)
ACTIVE_THRESHOLD=300     # 5 minutes
IDLE_THRESHOLD=3600      # 1 hour
STALE_THRESHOLD=14400    # 4 hours
ABANDONED_THRESHOLD=86400 # 24 hours
