{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash -c 'git fetch origin --quiet 2>/dev/null && BEHIND=$(git rev-list HEAD..origin/main --count 2>/dev/null || echo 0) && if [ \"$BEHIND\" -gt 0 ]; then echo \"⚠️  claude-power-pack has $BEHIND new commit(s). Run: git pull\"; else echo \"✓ claude-power-pack is current\"; fi'"
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "tool_name": "Bash"
        },
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/hook-validate-command.sh",
            "timeout": 2000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "Bash"
        },
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/hook-mask-output.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": {
          "tool_name": "Read"
        },
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/hook-mask-output.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
